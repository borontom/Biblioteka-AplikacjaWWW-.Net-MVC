@model IEnumerable<biblioteka___nowy_projekt.Models.Zamowienie>

@{
    ViewData["Title"] = "Lista wypożyczeń";
}

<h1>Lista wypożyczeń</h1>

<p>
    <a asp-action="Create">Dodaj wypożyczenie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataZamowienia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Czytelnik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ksiazka)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataZamowienia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Czytelnik.ImieNazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ksiazka.Tytul)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdZamowienie">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.IdZamowienie">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.IdZamowienie">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
